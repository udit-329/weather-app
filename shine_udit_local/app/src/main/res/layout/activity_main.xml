<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Shine.MainActivity"

    android:orientation="vertical"
    android:padding="20dp">

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter the city name"
    android:id="@+id/et"/>
    
    <Button
        android:id="@+id/bt_weather"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="get weather"
        android:onClick="getweather"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:translationX="300px"
        android:translationY="410px"
        tools:ignore="RtlCompat" />

    <Spinner
        android:id="@+id/sp_type"
        android:layout_width="90dp"
        android:layout_height="40dp"

        android:background="@android:drawable/editbox_background"
        android:translationX="260px"
        android:translationY="245px" />

    <TextView
        android:id="@+id/bestTimeText"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:translationY="-160px"/>



    <Button
        android:id="@+id/bt_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:translationY="-50px" />


    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

</LinearLayout>

